    <StackView
        android:id="@+id/widget_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/widget_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/empty_comment_message"
        android:gravity="center"/>

</RelativeLayout>